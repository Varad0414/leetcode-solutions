class Solution {
    public int[] shuffle(int[] nums, int n) {
        int arr[] = new int[nums.length];
        int i = 0, j = n;
        int ind = 0;

        while(i < n && j < arr.length){
            arr[ind++] = nums[i++];
            arr[ind++] = nums[j++];
        }

        return arr;
    }
}
